<Window x:Class="Mika_Music.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:local="clr-namespace:Mika_Music"
        mc:Ignorable="d"
        Title="Mika Music" Height="576" Width="993" WindowStyle="None" WindowStartupLocation="CenterScreen">
    <Grid>
        <Border Effect="{StaticResource EffectShadow4}" Background="White" Margin="20,24,22,0" CornerRadius="16" Height="47" VerticalAlignment="Top" MouseLeftButtonDown="Border_MouseLeftButtonDown">
            <Grid>
                <TextBlock HorizontalAlignment="Left" Margin="21,0,0,0" Text="早上好！" TextWrapping="Wrap" VerticalAlignment="Center" FontFamily="Source Han Sans CN Regular" FontSize="20" FontWeight="Normal"/>
                <iconPacks:PackIconMaterial Kind="Account" Margin="784,0,0,0" VerticalAlignment="Center" Height="26" Width="19" MouseLeftButtonUp="PackIconMaterial_MouseLeftButtonUp" />

                <iconPacks:PackIconCodicons Kind="ChromeMinimize" Margin="0,0,94,0" VerticalAlignment="Center" Width="11" HorizontalAlignment="Right" Background="#00000000" MouseLeftButtonUp="PackIconCodicons_MouseLeftButtonUp_1" />
                <iconPacks:PackIconMicrons Kind="Cancel" Margin="0,0,22,0" VerticalAlignment="Center" Width="10" MouseLeftButtonUp="PackIconMicrons_MouseLeftButtonUp" HorizontalAlignment="Right" Background="#00000000" />
                <iconPacks:PackIconCodicons Kind="ChromeMaximize" Margin="0,0,56,0" VerticalAlignment="Center" Width="11" HorizontalAlignment="Right" Background="#00000000" MouseLeftButtonUp="PackIconCodicons_MouseLeftButtonUp" />
                <Button Style="{StaticResource ButtonIcon}" Content="Button" HorizontalAlignment="Left" Margin="720,0,0,0" Height="28" Width="28"/>
                <Grid Margin="196,0,203,0" MouseLeftButtonDown="Grid_MouseLeftButtonDown" Background="#00000000"></Grid>
            </Grid>
        </Border>
        <Border Effect="{StaticResource EffectShadow4}" Background="White" Margin="20,86,22,83" CornerRadius="16">
            <Grid>
                <ContentControl x:Name="Header" Grid.Row="0" />
            </Grid>
        </Border>

    </Grid>
</Window>
